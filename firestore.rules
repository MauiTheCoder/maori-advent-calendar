rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Characters are public - anyone can read them
    match /characters/{document} {
      allow read: if true;
      allow write: if true; // Temporarily allow for seeding
    }

    // Activities are public - anyone can read them
    match /activities/{document} {
      allow read: if true;
      allow write: if true; // Temporarily allow for seeding
    }

    // User progress - users can read and write their own progress
    match /user_progress/{document} {
      allow read, write: if request.auth != null &&
        request.auth.uid == resource.data.user_id;
      allow create: if request.auth != null &&
        request.auth.uid == request.resource.data.user_id;
    }
  }
}
